<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="http://prismlibrary.com"
             x:Class="ClimaTempo.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Margin="30,0,30,0">
        <Label Text="Selecione abaixo um país, um estado e uma cidade" 
               VerticalOptions="CenterAndExpand" 
               HorizontalTextAlignment="Center" 
               FontSize="Medium"/>

        <Picker
            Title="País"
            HeightRequest="56"
            ItemsSource="{Binding Paises}"
            WidthRequest="218"
            SelectedItem="{Binding PaisSelecionado}"
            ItemDisplayBinding="{Binding NomePais}">
            <Picker.Behaviors>
                <behaviors:EventToCommandBehavior
                    Command="{Binding AtualizarListaEstadosCommand}"
                    CommandParameter="{Binding PaisSelecionado}"
                    EventName="SelectedIndexChanged" />
            </Picker.Behaviors>
        </Picker>

        <Picker
            Title="Estado"
            HeightRequest="56"
            ItemsSource="{Binding Estados}"
            WidthRequest="218"
            SelectedItem="{Binding EstadoSelecionado}"
            ItemDisplayBinding="{Binding NomeEstado}">
            <Picker.Behaviors>
                <behaviors:EventToCommandBehavior
                    Command="{Binding AtualizarListaCidadesCommand}"
                    CommandParameter="{Binding EstadoSelecionado}"
                    EventName="SelectedIndexChanged" />
            </Picker.Behaviors>
        </Picker>

        <Picker
            Title="Cidade"
            HeightRequest="56"
            ItemsSource="{Binding Cidades}"
            WidthRequest="218"
            SelectedItem="{Binding CidadeSelecionada}"
            ItemDisplayBinding="{Binding NomeCidade}">
            <Picker.Behaviors>
                <behaviors:EventToCommandBehavior
                    Command="{Binding ConfiguracoesCommand}"
                    CommandParameter="{Binding CidadeSelecionada}"
                    EventName="SelectedIndexChanged" />
            </Picker.Behaviors>
        </Picker>

        <Button Text="Ir para configurações" 
                Command="{Binding IrParaConfiguracoesCommand}"
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="End"/>
    </StackLayout>
</ContentPage>